<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body class="bg-gray-100">
<%- include('partials/_header.ejs') %>
<main role="main" class="mt-10">
  <div class="max-w-4xl mx-auto px-4">
    <h2 class="text-2xl font-bold mb-6">User Page</h2>
    <div class="tabs flex justify-center gap-4 mb-4">
      <button class="tab-button bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" onclick="openTab(event, 'Posts')">Posts</button>
      <button class="tab-button bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" onclick="openTab(event, 'Comments')">Comments</button>
    </div>
    <div id="Posts" class="tab-content">
      <% posts.forEach(function(post) { %>
        <% if (post.type === 'link') { %>
          <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <a href="/subSphere/<%= post.subSphere._id %>/posts" class="text-blue-500 hover:text-blue-700 font-bold"><%= post.subSphere.name %></a>
            <a href="<%= post.content %>" target="_blank" rel="noopener noreferrer" class="text-blue-500 hover:text-blue-700"><%= post.content %></a>
          </div>
        <% } else { %>
          <a href="/posts/<%= post._id %>" class="block">
            <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
              <a href="/subSphere/<%= post.subSphere._id %>/posts" class="text-blue-500 hover:text-blue-700 font-bold"><%= post.subSphere.name %></a>
              <% if (post.type === 'image') { %>
                <img src="<%= post.content %>" alt="Post Image" class="max-w-full h-auto">
              <% } else if (post.type === 'video') { %>
                <video controls src="<%= post.content %>" class="max-w-full h-auto">Your browser does not support the video tag.</video>
              <% } else { %>
                <p><%= post.content %></p>
              <% } %>
            </div>
          </a>
        <% } %>
      <% }); %>
    </div>
    <div id="Comments" class="tab-content" style="display:none">
      <% comments.forEach(function(comment) { %>
        <a href="/posts/<%= comment.post._id %>#comment-<%= comment._id %>" class="block">
          <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" id="comment-<%= comment._id %>">
            <a href="/subSphere/<%= comment.post.subSphere._id %>/posts" class="text-blue-500 hover:text-blue-700 font-bold"><%= comment.post.subSphere.name %></a>
            <p class="text-gray-700 text-base mb-4"><%= comment.content %></p>
          </div>
        </a>
      <% }); %>
    </div>
  </div>
</main>
<%- include('partials/_footer.ejs') %>
<script src="/js/main.js"></script>
<script>
  function openTab(evt, tabName) {
    var i, tabcontent, tabbuttons;
    tabcontent = document.getElementsByClassName("tab-content");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tabbuttons = document.getElementsByClassName("tab-button");
    for (i = 0; i < tabbuttons.length; i++) {
      tabbuttons[i].className = tabbuttons[i].className.replace(" active", "");
    }
    document.getElementById(tabName).style.display = "block";
    evt.currentTarget.className += " active bg-blue-700";
  }
</script>
</body>
</html>