<form action="/search" method="GET" class="flex flex-col space-y-4">
  <div class="flex flex-col">
    <label for="searchTerm" class="mb-2 font-bold text-gray-900 dark:text-gray-200">Search Term:</label>
    <input type="text" id="searchTerm" name="term" placeholder="Enter search term..." class="border-2 border-gray-300 dark:border-gray-600 p-2 rounded-md dark:bg-gray-700 dark:text-gray-300" required>
  </div>
  <div class="flex flex-col">
    <label for="timeFilter" class="mb-2 font-bold text-gray-900 dark:text-gray-200">Time:</label>
    <select id="timeFilter" name="time" class="border-2 border-gray-300 dark:border-gray-600 p-2 rounded-md dark:bg-gray-700 dark:text-gray-300">
      <option value="all">All Time</option>
      <option value="day">Past 24 Hours</option>
      <option value="week">Past Week</option>
      <option value="month">Past Month</option>
      <option value="year">Past Year</option>
    </select>
  </div>
  <div class="flex flex-col">
    <label class="mb-2 font-bold text-gray-900 dark:text-gray-200">Sort By:</label>
    <div class="flex items-center space-x-4">
      <div>
        <input type="radio" id="sortNew" name="sort" value="new" checked>
        <label for="sortNew" class="text-gray-900 dark:text-gray-200">New</label>
      </div>
      <div>
        <input type="radio" id="sortTop" name="sort" value="top">
        <label for="sortTop" class="text-gray-900 dark:text-gray-200">Top</label>
      </div>
    </div>
  </div>
  <div class="flex flex-col space-y-4">
    <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Search</button>
    <button id="trendingButton" class="text-center bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">Trending</button>
    <button id="recommendationsButton" class="text-center bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded">Recommendations</button>
  </div>
</form>