<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body class="bg-gray-100">
<%- include('partials/_header.ejs') %>
<main role="main" class="mt-10">
  <div class="max-w-4xl mx-auto px-4">
    <h2 class="text-2xl font-bold mb-6">SubSpheres</h2>
    <section>
      <h3 class="text-xl font-bold mb-4">Moderated SubSpheres</h3>
      <% moderatedSubSpheres.forEach(function(subSphere) { %>
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
          <a href="/subSphere/<%= subSphere._id %>/posts" class="text-blue-500 hover:text-blue-700"><%= subSphere.name %></a>
        </div>
      <% }); %>
    </section>
    <section>
      <h3 class="text-xl font-bold mb-4">Subscribed SubSpheres</h3>
      <% subscribedSubSpheres.forEach(function(subSphere) { %>
        <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
          <a href="/subSphere/<%= subSphere._id %>/posts" class="text-blue-500 hover:text-blue-700"><%= subSphere.name %></a>
        </div>
      <% }); %>
    </section>
  </div>
</main>
<%- include('partials/_footer.ejs') %>
<script src="/js/main.js"></script>
</body>
</html>