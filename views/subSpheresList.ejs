<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body class="bg-gray-100">
<%- include('partials/_header.ejs') %>
<main role="main" class="mt-10">
  <div class="max-w-4xl mx-auto px-4">
    <h2 class="text-2xl font-bold mb-6">SubSpheres</h2>
    <div class="mb-6">
      <a href="/createSubSphere" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Create SubSphere</a>
    </div>
    <section>
      <h3 class="text-xl font-bold mb-4">Moderated SubSpheres</h3>
      <% if (moderatedSubSpheres.length > 0) { %>
        <% moderatedSubSpheres.forEach(function(subSphere) { %>
          <div class="flex justify-between items-center bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <a href="/subSphere/<%= subSphere._id %>/posts" class="text-blue-500 hover:text-blue-700 font-bold"><%= subSphere.name %></a>
            <a href="/editSubSphere/<%= subSphere._id %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Edit</a>
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-gray-700">You are not moderating any SubSpheres yet. <a href="/createSubSphere" class="text-blue-500 hover:text-blue-700">Create one now!</a></p>
      <% } %>
    </section>
    <section>
      <h3 class="text-xl font-bold mb-4">Subscribed SubSpheres</h3>
      <% if (subscribedSubSpheres.length > 0) { %>
        <% subscribedSubSpheres.forEach(function(subSphere) { %>
          <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <a href="/subSphere/<%= subSphere._id %>/posts" class="text-blue-500 hover:text-blue-700"><%= subSphere.name %></a>
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-gray-700">You have not subscribed to any SubSpheres yet. Explore and <a href="/subSpheresList" class="text-blue-500 hover:text-blue-700">join SubSpheres</a> to see their posts.</p>
      <% } %>
    </section>
  </div>
</main>
<%- include('partials/_footer.ejs') %>
<script src="/js/main.js"></script>
</body>
</html>