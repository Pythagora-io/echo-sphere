<!DOCTYPE html>
<html lang="en" class="<%= theme === 'dark' ? 'dark' : '' %>">
<%- include('partials/_head.ejs') %>
<body class="bg-gray-100 dark:bg-gray-800">
<%- include('partials/_header.ejs') %>
<main role="main" class="max-w-7xl mx-auto mt-4 flex flex-col md:flex-row flex-wrap">
  <div class="md:w-1/4 p-4 md:sticky top-0 self-start order-first md:order-none flex-grow">
    <%- include('partials/searchForm.ejs') %>
  </div>
  <div class="md:w-3/4 p-4 order-2 md:order-2 flex-grow" id="mainPanel">
    <% if (term) { %>
      <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-200">Search Results for "<%= term %>"</h1>
      <!-- Displaying applied filters and sort options as tags -->
      <div class="flex flex-wrap gap-2 my-4">
        <% if (time && time !== 'all') { %>
          <span class="bg-blue-100 text-blue-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800">Time: <%= time %></span>
        <% } %>
        <% if (sort) { %>
          <span class="bg-green-100 text-green-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded dark:bg-green-200 dark:text-green-900">Sort: <%= sort %></span>
        <% } %>
      </div>
      <div class="tabs" id="tabs">
        <button class="tablinks px-4 py-2 border-b-2 font-medium text-sm focus:outline-none focus:border-indigo-500 dark:focus:border-indigo-300 ring-2 ring-blue-500 shadow-lg hover:ring-2 hover:ring-blue-600 hover:shadow-xl dark:ring-blue-400 dark:hover:ring-blue-500 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 rounded-lg" data-tab="Posts">Posts</button>
        <button class="tablinks px-4 py-2 border-b-2 font-medium text-sm focus:outline-none focus:border-indigo-500 dark:focus:border-indigo-300 ring-2 ring-blue-500 shadow-lg hover:ring-2 hover:ring-blue-600 hover:shadow-xl dark:ring-blue-400 dark:hover:ring-blue-500 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 rounded-lg" data-tab="Comments">Comments</button>
        <button class="tablinks px-4 py-2 border-b-2 font-medium text-sm focus:outline-none focus:border-indigo-500 dark:focus:border-indigo-300 ring-2 ring-blue-500 shadow-lg hover:ring-2 hover:ring-blue-600 hover:shadow-xl dark:ring-blue-400 dark:hover:ring-blue-500 bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 rounded-lg" data-tab="SubSpheres">SubSpheres</button>
      </div>
      <div id="Posts" class="tabcontent">
        <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-200">Posts</h2>
        <% if (posts && posts.length > 0) { %>
          <% posts.forEach(function(post) { %>
            <a href="/posts/<%= post._id %>" class="block">
              <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex justify-between items-center dark:bg-gray-700">
                <div>
                  <h3 class="text-xl font-bold text-blue-500 hover:text-blue-700 dark:hover:text-blue-400"><%= post.title %></h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400">By <%= post.author.username %> on <%= new Date(post.createdAt).toLocaleString() %></p>
                  <p class="text-gray-900 dark:text-gray-200">Total Votes: <%= post.upvotes - post.downvotes %></p>
                </div>
                <% if (post.type === 'video') { %>
                  <!-- Placeholder for video thumbnail -->
                  <img src="/images/video-placeholder.png" alt="Video Thumbnail" class="w-20 h-20">
                <% } else if (post.type === 'image') { %>
                  <img src="<%= post.content %>" alt="Post Image" class="w-20 h-20">
                <% } %>
              </div>
            </a>
          <% }); %>
        <% } else { %>
          <p class="text-gray-900 dark:text-gray-200">No posts found.</p>
        <% } %>
      </div>
      <div id="Comments" class="tabcontent" style="display:none;">
        <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-200">Comments</h2>
        <% if (comments && comments.length > 0) { %>
          <% comments.forEach(function(comment) { %>
            <a href="/posts/<%= comment.post._id %>#comment-<%= comment._id %>" class="block">
              <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 dark:bg-gray-700">
                <p class="text-gray-700 text-base mb-4 dark:text-gray-200"><%= comment.content %></p>
                <p class="text-sm text-gray-500 dark:text-gray-400">By <%= comment.author.username %> on <%= new Date(comment.createdAt).toLocaleString() %></p>
                <p class="text-gray-900 dark:text-gray-200">Total Votes: <%= comment.upvotes - comment.downvotes %></p>
              </div>
            </a>
          <% }); %>
        <% } else { %>
          <p class="text-gray-900 dark:text-gray-200">No comments found.</p>
        <% } %>
      </div>
      <div id="SubSpheres" class="tabcontent" style="display:none;">
        <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-200">SubSpheres</h2>
        <% if (subSpheres && subSpheres.length > 0) { %>
          <% subSpheres.forEach(function(subSphere) { %>
            <a href="/subSphere/<%= subSphere._id %>/posts" class="block">
              <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 dark:bg-gray-700">
                <p class="text-blue-500 hover:text-blue-700 font-bold dark:hover:text-blue-400"><%= subSphere.name %>: <%= subSphere.description %></p>
                <p class="text-gray-900 dark:text-gray-200">Subscribers: <%= subSphere.subscribers ? subSphere.subscribers.length : 'N/A' %></p>
              </div>
            </a>
          <% }); %>
        <% } else { %>
          <p class="text-gray-900 dark:text-gray-200">No SubSpheres found.</p>
        <% } %>
      </div>
    <% } else { %>
      <div class="mt-6">
        <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-200">Welcome to the Search Page</h1>
        <p class="mt-4 text-lg text-gray-900 dark:text-gray-200">Use the search form to find Posts, Comments, and SubSpheres.</p>
      </div>
    <% } %>
  </div>
</main>
<%- include('partials/_footer.ejs') %>
<script src="/js/tabsHandler.js"></script>
<script src="/js/searchHandler.js"></script>
</body>
</html>