<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
<body>
<%- include('partials/_header.ejs') %>
<main role="main">
  <div class="container mt-5">
    <h2>Create SubSphere</h2>
    <form action="/createSubSphere" method="POST">
      <div class="mb-3">
        <input type="text" name="name" placeholder="Name" required class="form-control">
      </div>
      <div class="mb-3">
        <textarea name="description" placeholder="Description" required class="form-control"></textarea>
      </div>
      <div class="mb-3">
        <input type="text" name="flares" placeholder="Flares (comma-separated)" class="form-control">
      </div>
      <!-- Add more inputs for settings as needed -->
      <div class="mb-3">
        <button type="submit" class="btn btn-primary">Create SubSphere</button>
      </div>
    </form>
  </div>
</main>
</body>
<%- include('partials/_footer.ejs') %>
</html>